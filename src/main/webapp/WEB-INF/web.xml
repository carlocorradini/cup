<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <!-- === BASICS === -->
    <display-name>CUP</display-name>
    <description>Centrale Unica Prenotazioni</description>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>

    <!-- === CONTEXT === -->
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.FACELETS_SKIP_COMMENTS</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>client</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.WEBAPP_RESOURCES_DIRECTORY</param-name>
        <param-value>/assets</param-value>
    </context-param>

    <!-- JSTL TAGS -->
    <context-param>
        <param-name>javax.faces.FACELETS_LIBRARIES</param-name>
        <param-value>
            /META-INF/LocalDateConverter.taglib.xml;
            /META-INF/LocalTimeConverter.taglib.xml;
        </param-value>
    </context-param>

    <!-- === ENV === -->
    <env-entry>
        <env-entry-name>jsf/ClientSideSecretKey</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>zXk2XKK0DvUu7a6HCiO/UKtTRwYzcaj6obd8xKzWo/c=</env-entry-value>
    </env-entry>

    <!-- === JSF === -->
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <!-- === SESSION === -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- === ERROR PAGES === -->
    <!-- Forbidden directory listing -->
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/error/403.xhtml</location>
    </error-page>
    <!-- Missing resource -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error/404.xhtml</location>
    </error-page>
    <!-- Uncaught exception -->
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/error/500.xhtml</location>
    </error-page>
    <!-- Bad Gateway -->
    <error-page>
        <error-code>502</error-code>
        <location>/WEB-INF/error/500.xhtml</location>
    </error-page>
    <!-- Unsupported servlet method -->
    <error-page>
        <error-code>503</error-code>
        <location>/WEB-INF/error/503.xhtml</location>
    </error-page>

    <!-- MIME MAPPING -->
    <mime-mapping>
        <extension>webmanifest</extension>
        <mime-type>application/manifest+json</mime-type>
    </mime-mapping>
</web-app>